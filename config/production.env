# =============================================================================
# TESTIQ PRODUCTION MODE - Configuration Complète
# =============================================================================

# Mode Production
NODE_ENV=production
DEMO_MODE=false

# Ports Production
PORT=5000
WEB_PORT=3000
FRONTEND_URL=http://localhost:3000

# MongoDB Production - Base principale
DB_DRIVER=mongodb
MONGODB_URI=mongodb://localhost:27017/iq_test_db

# Stockage Production
STORAGE_DRIVER=filesystem
STORAGE_DIR=./data/assets

# CORS Production
CORS_ALLOWED_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# RBAC Production Complet
RBAC_DEFAULT_ROLE=user
DISABLE_ADMIN_ROUTES=false
AUTH_REQUIRED=true

# Quality Gates Production
QUALITY_GATES_STRICT=true
CORPUS_GATE_REQUIRE=0.95
RULE_ENGINE_FALLBACK=false

# Sécurité Production
SVG_SANITIZER_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# JWT Production (CHANGER EN PRODUCTION RÉELLE)
JWT_SECRET=production-secret-CHANGE-IN-REAL-DEPLOYMENT-x8k9j2s
JWT_EXPIRES_IN=24h

# Features Production Complètes
FEATURE_EXPORT=true
FEATURE_BULK_IMPORT=true
FEATURE_API_DOCS=true
FEATURE_VISUAL_GENERATOR=true

# Logs Production
LOG_LEVEL=info
LOG_FORMAT=combined
DEBUG_MODE=false

# Email/Analytics Production
EMAIL_ENABLED=true
ANALYTICS_ENABLED=true
SMTP_HOST=smtp.production.com
SMTP_USER=noreply@testiq.com
SMTP_PASS=production_email_password

# Monitoring Production Complet
MONITORING_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health

# Limites Production
MAX_FILE_SIZE=10485760
MAX_FILES_PER_REQUEST=10
SESSION_MAX_AGE=86400000

# Assets Production
ASSETS_VERSION=prod-v5.0
CACHE_TTL=7200