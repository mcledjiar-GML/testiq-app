# =============================================================================
# TESTIQ DEMO MODE - Configuration Simplifiée et Sécurisée
# =============================================================================

# Mode Demo
NODE_ENV=demo
DEMO_MODE=true

# Ports Demo (différents de production)
PORT=4000
WEB_PORT=5173
FRONTEND_URL=http://localhost:5173

# MongoDB Demo - Base en mémoire avec sauvegarde JSON
DB_DRIVER=mongodb
MONGODB_URI=memory
DEMO_DATA_BACKUP=./data/demo-backup.json

# Stockage Demo
STORAGE_DRIVER=filesystem
STORAGE_DIR=./data/demo-assets

# CORS Demo (à mettre à jour avec tunnel front)
CORS_ALLOWED_ORIGIN=<FRONT_TUNNEL_URL>
CORS_CREDENTIALS=false

# RBAC Demo - Accès limité
RBAC_DEFAULT_ROLE=viewer
DISABLE_ADMIN_ROUTES=true
AUTH_REQUIRED=false

# Quality Gates Demo
QUALITY_GATES_STRICT=true
CORPUS_GATE_REQUIRE=0.95
RULE_ENGINE_FALLBACK=false

# Sécurité Demo Renforcée
SVG_SANITIZER_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=50
RATE_LIMIT_WINDOW_MS=900000

# JWT Demo
JWT_SECRET=demo-secret-change-in-production-f8k2j9s
JWT_EXPIRES_IN=24h

# Features Demo Limitées
FEATURE_EXPORT=true
FEATURE_BULK_IMPORT=false
FEATURE_API_DOCS=true
FEATURE_VISUAL_GENERATOR=true

# Logs Demo Minimaux
LOG_LEVEL=warn
LOG_FORMAT=simple
DEBUG_MODE=false

# Email/Analytics Demo Désactivés
EMAIL_ENABLED=false
ANALYTICS_ENABLED=false
SMTP_HOST=
SMTP_USER=
SMTP_PASS=

# Monitoring Demo Minimal
MONITORING_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health

# Limites Demo Réduites
MAX_FILE_SIZE=5242880
MAX_FILES_PER_REQUEST=3
SESSION_MAX_AGE=86400000

# Assets Demo
ASSETS_VERSION=demo-v1
CACHE_TTL=3600